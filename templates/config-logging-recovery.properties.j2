{% set combined_log_config = default_log_config | combine(log_config, recursive=true) -%}
[console]

sinkType = Sync
level = Info
colorMode = Ansi

[console.component.levels]

# e.g. to log more verbose messages about the 'net' component, uncomment
# net = Debug

[file]

sinkType = Async
level = Info
directory = /logs
filePattern = /logs/catapult_recovery%4N.log
rotationSize = 25MB
maxTotalSize = 2500MB
minFreeSpace = 100MB

[file.component.levels]