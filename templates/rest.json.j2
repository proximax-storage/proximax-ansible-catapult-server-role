{
  "network": {
    "name": "{{ catapult_network_name }}",
    "description": "{{ catapult_network_description }}"
  },

  "port": 3000,
  "crossDomainHttpMethods": ["GET", "POST", "PUT", "OPTIONS"],
  "cors": "{{ catapult_rest_cors }}",
  "clientPrivateKey": "{{ catapult_rest_client_private_key }}",
  "extensions": ["accountLink", "accountProperties", "aggregate", "exchange", "config", "lock", "metadata", "mosaic", "multisig", "namespace", "operation", "receipts", "richlist", "service", "supercontract", "transfer", "upgrade"],
  "db": {
    "url": "mongodb://db:27017/",
    "name": "catapult",
    "pageSizeMin": 10,
    "pageSizeMax": 100,
    "pageSizeStep": 25,
    "maxConnectionAttempts": 5,
    "baseRetryDelay": 500
  },

  "apiNode": {
    "host": "catapult-api-node",
    "port": 7900,
    "publicKey": "{{ catapult_api_node_public_key }}",
    "timeout": 1000
  },

  "transactionCache": {
    "flushFrequency": 1500
  },

  "websocket": {
    "mq": {
      "host": "catapult-api-node",
      "port": 7902,
      "monitorInterval": 500,
      "connectTimeout": 10000,
      "monitorLoggingThrottle": 60000
    },
    "allowOptionalAddress": true
  },

  "throttling": {
    "burst": {{ throttling_burst }},
    "rate": {{ throttling_rate }}
  },

  "endpoints": {
    "GET /mosaic/:mosaicId/richlist": {
      "throttling": {
        "burst": 10,
        "rate": 5
      }
    }
  },

  "logging": {
    "console": {
      "colorize": true,
      "level": "verbose",
      "handleExceptions": true,
      "prettyPrint": true,
      "timestamp": true
    },
    "file": {
      "level": "verbose",
      "handleExceptions": true,
      "prettyPrint": true,
      "timestamp": true,
      "filename": "/logs/catapult-rest.log",
      "maxsize": 20971520,
      "maxFiles": 100
    }
  }
}
